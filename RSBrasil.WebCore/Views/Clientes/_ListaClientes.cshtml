@model List<RSBrasil.Model.Entidades.Cliente>

<p>
    @Html.ActionLink("Novo cliente", "Novo", "Clientes")
</p>
    @if (Model.Count > 0)
    {
        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
                <tr>
                    <th class="center">Código</th>
                    <th class="center">Nome</th>
                    <th class="center">Contato</th>
                    <th class="center">Telefone</th>
                    <th class="center"></th>
                </tr>

            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item</td>
                        @*<td><a href="/Edit=id">@item.NomeFantasia</a></td>*@
                        <td>@item.NomeFantasia</td>
                        <td>@item.Contato</td>
                        <td>@item.Telefone</td>
                        <td class="center">
                            <button class="btn btn-danger" onclick="Desativar(@item.Id, @item.NomeFantasia)">Excluir</button>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
    }
    else
    {
        <p>Não existe clientes cadastrados</p>
    }